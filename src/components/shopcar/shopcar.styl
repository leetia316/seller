.shopcar 
    position: fixed
    left: 0
    bottom: 0
    width: 100%
    height: 48px
    z-index: 90
    .content
        display: flex
        width: 100%
        height: 48px
        color: rgba(255, 255, 255, .4)
        background-color: #141d27
        position: relative
        z-index: 12
        .content-left
            flex: 1 1 auto
            height: 48px
            font-size: 0
            .car-icon
                display: inline-block
                width: 44px
                height: 44px
                padding: 6px
                margin: 0 12px 0 18px
                position: relative
                top: -8px
                background-color: #141d27
                border-radius: 50%
                z-index: 88
                .icon-shopping_cart
                    display: block
                    width: 44px
                    height: 44px
                    text-align: center
                    line-height: 44px
                    font-size: 24px
                    background-color: #2b333b
                    border-radius: 50%
                    &.high-light
                        color: #fff
                        background-color: rgb(0, 160, 220)
                .num
                    display: block
                    position: absolute
                    top: 0
                    right: 0
                    width: 24px
                    height: 16px
                    text-align: center
                    line-height: 16px
                    font-size: 9px
                    font-weight: 700
                    color: #fff
                    background-color: #f00;
                    border-radius: 16px
                    box-shadow: 0px 4px 8px 0 rgba(0, 0, 0, .4)
            .price
                display: inline-block
                margin-top: 16px
                margin-right: 12px
                padding-right: 12px
                vertical-align: top
                font-size: 16px
                font-weight: bold
                border-right: 1px solid rgba(255, 255, 255, .2)
            .desc
                display: inline-block
                margin-top: 16px
                vertical-align: top
                font-size: 16px
                
        .content-right
            flex: 0 0 105px
            width: 105px
            height: 48px
            line-height: 48px
            text-align: center
            font-size: 12px
            font-weight: bold
            background-color: #2b333b
            &.not-enough
                background-color: #2b333b
            &.enough
                background-color: #00b43c
                color: #fff
    .ball-container
        .ball
            position: fixed
            left: 32px
            bottom: 22px
            width: 16px
            height: 16px
            z-index: 88
            .inner
                width: 16px
                height: 16px
                border-radius: 50%
                background-color: #00a0dc
    .drop-enter-active
        transition: all .4s cubic-bezier(.49, -.29, .75, .41)
        .inner
            transition: all .5s 
    .shopcar-list
        width: 100%
        height: calc(100vh - 48px)
        position: absolute
        left: 0
        bottom: 100%
        background-color: rgba(7, 17, 27, .6)
        z-index: 8
        .container
            width: 100%
            position: absolute
            left: 0
            bottom: 0
            background-color: #fff
            overflow: hidden
            z-index: 9
            .title
                display: flex
                align-content: space-between
                height: 40px
                padding: 0 18px
                line-height: 40px
                border-bottom: 1px solid rgba(7, 17, 27, .1)
                background-color: #f3f5f7
                h1
                    flex: 1 1 auto
                    font-size: 14px
                    font-weight: 200
                    color: rgb(7, 17, 27)
                .del
                    padding-left: 24px
                    font-size: 12px
                    color: rgb(0, 160, 220)
            .selectfood-wrap
                max-height: 255px
                padding: 0 18px
                margin-bottom: 10px
                overflow: hidden
                li
                    display: flex
                    align-content: space-between
                    height: 48px
                    line-height: 48px
                    border-bottom: 1px solid rgba(7, 17, 27, .1)
                    .name
                        flex: 1 1 auto
                        font-size: 14px
                        color: rgb(7, 17, 27)
                    .price
                        padding: 0 12px 0 18px
                        font-size: 14px
                        color: #f00
    .slideUp-enter-active,.slideUp-leave-active
        transition: opacity 1s
        .container
            transition: all 1s
    .slideUp-enter,.slideUp-leave-active
        opacity: 0
        .container
            transform: translate3d(0, 100%, 0)
    .food-item
        transition: all .5s
    .delet-leave-active
        transition: all .5s
    .delet-leave-active
        opacity: 0
        transform: translate3d(0, -100%, 0)