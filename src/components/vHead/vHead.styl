@import '../../assets/stylus/mixin.styl'
.header
    color: #fff
    font-weight: 200
    overflow: hidden
    position: relative
    background-image: url(http://static.galileo.xiaojukeji.com/static/tms/seller_avatar_256px.jpg)
    background-repeat: no-repeat
    background-size: 100%
    .seller-wrap
        display: flex
        background-color: rgba(7, 17, 27, .2)
        padding: 24px 24px 18px
        position: relative
        z-index: 2
        .avatar
            flex: 0 1 64px
            margin-right: 16px
        .title
            margin-bottom: 8px
            font-size: 0
            .brand
                display: inline-block
                width: 30px
                height: 18px
                margin-right: 6px
                bg-img('img/brand')
                background-size: 30px 18px
                background-repeat: no-repeat
                vertical-align: top
            .name
                font-size: 16px
                font-weight: bold
                color: #fff
        .description
            font-size: 14px
            margin-bottom: 10px
        .support-wrap
            .icon
                width: 12px
                height: 12px
                background-size: 12px 12px 
        .support-count
            height: 24px
            padding: 0 8px
            position: absolute
            right: 12px
            bottom: 18px
            font-size: 10px
            line-height: 24px
            text-align: center
            vertical-align: middle
            background-color: rgba(0, 0, 0, .2)
            border-radius: 12px
            z-index: 2
    .bulletin-wrap
        display: flex
        height: 28px
        padding: 0 12px
        font-size: 10px
        line-height: 28px
        background-color: rgba(7, 17, 27, .5)
        position: relative
        z-index: 10
        .tit
            flex: 0 0 22px
            align-self: center
            width: 22px
            height: 12px
            margin-right: 4px
            bg-img('img/bulletin')
            background-size: 22px 12px
            background-repeat: no-repeat 
        .txt
            overflow: hidden
            text-overflow: ellipsis
            white-space: nowrap
        .icon
            align-self: center
    .detail-wrap
        width: 100%
        height: 100vh
        position: fixed
        top: 0
        left: 0
        padding-bottom: 64px
        background-color: rgba(7, 17, 27, .8)
        overflow-x: hidden
        z-index: 99
        .detail
            min-height: calc(100vh - 64px)
            position: relative
            padding: 0 36px 64px
            .name
                padding-top: 64px
                font-size: 16px
                font-weight: 700
                text-align: center
            .star-wrap
                margin-top: 16px
            .container
                margin: 28px auto  
                .supports-wrap
                    margin-top: 22px
                    li
                        margin-bottom: 6px
                    .icon
                        width: 16px
                        height: 16px
                        background-size: 16px 16px 
                    .text
                        font-size: 12px 
                .bulletin
                    margin-top: 24px
                    font-size: 12px
                    line-height: 2        
            .title-wrap
                display: flex
                .line
                    flex: 1 1 0
                    height: 2px
                    align-self: center
                    background-color: rgba(255, 255, 255, .2)
                .text
                    padding: 0 12px
                    font-size: 14px
                    font-weight: 700
                   
        .icon-close
            position: absolute
            bottom: 32px
            left: 50%
            margin-left: -16px
            font-size: 32px
            color: rgba(255, 255, 255, 0.5)
    .background
        width: 100%
        height: 100%
        position: absolute
        top: 0
        left: 0
        z-index: 1
        background-color: rgba(7, 17, 27, .6)
    .slideLeft-enter-active,.slideLeft-leave-active
        transition: all 1s
    .slideLeft-enter,.slideLeft-leave-active
        opacity: 0
        transform: translate3d(100%, 0, 0)

            