.seller
    height: calc(100vh - 176px)
    font-weight: 200
    overflow: hidden
    .title
        font-size: 14px
        font-weight: 700
        color: rgb(7, 17, 27)
    .seller-mation
        padding: 18px
        .name
            margin-bottom: 8px
            font-size: 14px
            font-weight: 700
            color: rgb(7, 17, 27)
        .star-wrap
            display: flex
            .star-icon
                width: 16px
                height: 16px
                margin-right: 8px
                background-size: 16px 16px
            .sell-count,.rating-count
                align-self: center
                font-size: 10px
                color: rgb(77, 85, 93)
            .rating-count
                margin: 0 12px 0 8px
        .sevice-data
            display: flex
            align-content: center
            margin-top: 18px
            padding-top: 18px
            border-top: 1px solid rgba(7, 17, 27, .1)
            .min-price,.delivery-price,.delivery-time
                width: 33.33%
                text-align: center
                .txt
                    margin-bottom: 4px
                    font-size: 10px
                    color: rgb(147, 153, 159)
                .num
                    font-size: 24px
                    color: rgb(7, 17, 27)
                    sup
                        font-size: 10px
            .delivery-price
                border: 1px solid rgba(7, 17, 27, .1)
                border-top: 0
                border-bottom: 0
    
    .bulletin-supports
        padding: 18px
        .title
            margin-bottom: 8px
        .bulletin
            padding: 0 12px
            margin-bottom: 18px
            font-size: 12px
            line-height: 2
            color: rgb(240, 20, 20)
        .supports-wrap
            font-size: 12px
            color: rgb(7, 17, 27)
            li
                padding: 16px 12px
                border-top: 1px solid rgba(7, 17, 27, .1)
            .icon
                width: 16px
                height: 16px
                background-size: 16px 16px
    .seller-pics
        padding: 18px
        .title
            margin-bottom: 12px
        .scroll-wrap
            height: 90px
            overflow: hidden
            .container
                width: auto
            li
                float: left
                width: 120px
                height: 90px
                margin-right: 6px
    .seller-infos
        padding: 18px
        .title
            margin-bottom: 12px
        li
            padding: 18px 12px
            font-size: 12px
            font-weight: 200
            color: rgb(7, 17, 27)
            border-top: 1px solid rgba(7, 17, 27, .1)
        